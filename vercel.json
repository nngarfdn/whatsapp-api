{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "memory": 3008,
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CHROME_BIN": "/usr/bin/google-chrome-stable"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "CHROME_BIN": "/usr/bin/google-chrome-stable"
    }
  },
  "buildCommand": "npm install && npm install puppeteer",
  "installCommand": "npm install"
}